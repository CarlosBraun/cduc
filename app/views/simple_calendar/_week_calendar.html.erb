<div class="simple-calendar">
  <style>
    #calen{
      border: 1px solid;
      border-color: grey;
      border-collapse:separate;
      border-radius:6px;
      background-color: #fff;
    }
  </style>
  <table class="table table-striped" id="calen">
    <thead>
      <tr>
        <% date_range.slice(0, 5).each do |day| %>
          <th><%= t('date.day_names')[day.wday].upcase_first %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(5) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%if t('date.abbr_day_names')[day.wday] =="lun" || t('date.abbr_day_names')[day.wday] =="mar" || t('date.abbr_day_names')[day.wday] =="miÃ©"|| t('date.abbr_day_names')[day.wday] =="jue"|| t('date.abbr_day_names')[day.wday] =="vie"%>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
            <%end%>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
