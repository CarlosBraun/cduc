<style>
  #conteiner_3{
    margin-left: 0px;
    margin-right: 0px;
    margin-top: 3%;
    margin-bottom: 2%;
    width : auto;
  }
  #form1{
    width : 100% ;
  }
  #formspace{
    margin-left: 10%;
    margin-right: 10%;
  }

</style>
<div class="row ml-0" id="conteiner_3">
  <div class="col" id=formspace>
    <%= form_with model: jugador, local: true do |form| %>
      <%= errors_for jugador %>
      <div class="mb-3" id="form1">
        <%= form.label 'Foto' %>
        <%= form.file_field :avatar, class: "form-control-file" %>
      </div> 
      <div class="row">
        <div class="col">
          <div class="mb-3" id="form1">
            <%= form.label 'Primer Nombre', class: "form-label" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="col">
          <div class="mb-3" id="form1">
            <%= form.label 'Segundo Nombre', class: "form-label" %>
            <%= form.text_field :name2, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="mb-3" id="form1">
            <%= form.label 'Apellido Paterno', class: "form-label" %>
            <%= form.text_field :last_name1, class: "form-control" %>
          </div>
        </div>
        <div class="col">
          <div class="mb-3" id="form1">
            <%= form.label 'Apellido Materno', class: "form-label" %>
            <%= form.text_field :last_name2, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="mb-3" id="form1">
            <%= form.label :edad, class: "form-label" %>
            <%= form.text_field :edad, class: "form-control" %>
          </div>
        </div>
        <div class="col">
          <div class="mb-3" id="form1">
            <%= form.label 'RUT', class: "form-label" %>
            <%= form.text_field :rut, class: "form-control" , placeholder:"Con puntos y guion"%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="mb-3" id="form1">
          <%= form.label :mail, class: "form-label" %>
          <%= form.text_field :mail, class: "form-control" %>
          </div>
        </div>
        <div class="col">
          <div class="mb-3" id="form1">
            <%= form.label :telephone, class: "form-label" %>
            <%= form.text_field :telephone, class: "form-control", placeholder:"+569..." %>
          </div>
        </div>
      </div> 
      <div class="form-group mt-2">
        <%= form.submit 'Guardar Jugador', class: 'btn btn-secondary' %>
        <%= link_to "Volver", :back, class: ["btn", "btn-secondary"] %>
      </div>
    <% end %>
  </div>
</div>
