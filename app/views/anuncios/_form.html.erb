<style>
  #conteiner_3{
    margin-left: 0px;
    margin-right: 0px;
    margin-top: 3%;
    margin-bottom: 2%;
    width : auto;
  }
  #form1{
    width : 100% ;
  }
  #formspace{
    margin-left: 10%;
    margin-right: 10%;
  }
  select{
    width: 100%;
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    background-color: #fff; 
  }
  textarea{
    height: 19em;
  }

</style>
<div class="row ml-0" id="conteiner_3">
  <div class="col" id=formspace>
    <%= form_with model: anuncio, local: true do |form| %>
      <%= errors_for anuncio %> 
      <div class="row g-3">
        <div class="col-md-9">
          <div class="mb-3" id="form1">
            <%= form.label 'Nombre', class: "form-label" %>
            <%= form.text_field :title , class: "form-control" %>
          </div>
        </div>
        <div class="col-3">
          <div class="mb-3" id="form1">
            <%= form.label "Categoria", class: "form-label" %>
            <%= form.select :categoria, ["Todas","Todo Competidor", "Senior", "Sub 20", "Sub 19", "Sub 18", "Sub 17", "Sub 16", "Sub 15", "Sub 14", "Sub 13", "Sub 12", "Escuelita"], class: "form-control" %>
          </div>
        </div>
        <div class="col-md-12">
          <div class="mb-3" id="form1">
            <%= form.label 'Mensaje', class: "form-label" %>
            <%= form.text_area :description , class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group mt-2">
        <%= form.submit 'Enviar Anuncio', class: 'btn btn-primary' %>
        <%= link_to "Volver", :back, class: ["btn", "btn-secondary"] %>
      </div>
    <% end %>
  </div>
</div>