<div class="col-md-4 mb-3">
  <div class="card shadow-sm">
    <div class="card-body">
        <p class="card-text"> Ticket # : <%= link_to ticket.id, ticket %></p>
        <p class="card-text"> State : <%= ticket.state %></p>
        <p class="card-text"> Priority : <%=  ticket.priority %></p>
        <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", ticket %></button>
          <% if $masterauth or $lowauth %>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_ticket_path(ticket) %></button>
          <% end %>
        </div>
        <small class="text-muted"><%= "#{(DateTime.now.to_date.next_day(10) - ticket.created_at.to_date).to_i} days remaining to answer or resolving the incident." %></small>
      </div>
    </div>
  </div>
</div>