<h1>Editing ticket</h1>
<h4> Priority and Support Executive edit.</h4>
<pre></pre>
<pre></pre>
<div class="row ml-0">
  <div class="col-6">
    <%= form_with model: @ticket, local: true do |form| %>
      <%= errors_for @ticket %>
      <div class="mb-3">
        <%= form.label :priority, class: "form-label" %>
        <%= form.select :priority, ["Low", "Medium", "High"], class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :support_exevutive, class: "form-label" %>
        <%= form.collection_select(:support_executive_id, SupportExecutive.all.order(name: :asc), :id, :name, {}, { class: "form-control" }) %>
      </div>
      <div class="mb-3">
        <%= form.label :response, class: "form-label" %>
        <%= form.text_field :response, class: "form-control" %>
      </div>
      <div class="form-group mt-2">
      <%= form.submit class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
    <% end %>
  </div>
</div>

<br>

<div>
  <%= link_to "Show this ticket", @ticket %> |
  <%= link_to "Back to tickets", tickets_path %>
</div>
