<style>
  #conteiner_3{
    margin-left: 0px;
    margin-right: 0px;
    margin-top: 3%;
    margin-bottom: 2%;
    width : auto;
  }
  #form1{
    width : 100% ;
  }
  #formspace{
    margin-left: 10%;
    margin-right: 10%;
  }
  #datos{
    margin-bottom: 2%;
  }
  select{
    width: 100%;
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    background-color: #fff; 
  }
  #botones{
    margin-top: 2%;
  }

</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js" integrity="sha256-+C0A5Ilqmu4QcSPxrlGpaZxJ04VjsRjKu+G82kl5UJk=" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css" integrity="sha256-ze/OEYGcFbPRmvCnrSeKbRTtjG4vGLHXgOqsyLFTRjg=" crossorigin="anonymous" />

<div class="row ml-0" id="conteiner_3">
  <div class="col" id=formspace>
    <%= form_with model: evaluacion, local: true do |form| %>
      <%= errors_for evaluacion %>
      <h2 id="datos">Datos de la Evaluación </h2>
      <div class="row g-3">
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label 'Nombre de la Evaluación', class: "form-label" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label :jugador_id, class: "form-label" %>
            <%= form.collection_select(:jugador_id, Jugador.all.order(fullname: :asc), :id, :fullname, {}, { class: "form-control" }) %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3" id="form1">
            <%= form.label 'Altura', class: "form-label" %>
            <%= form.text_field :altura, class: "form-control", placeholder:"Cm"  %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3" id="form1">
            <%= form.label 'Embergadura', class: "form-label" %>
            <%= form.text_field :embergadura, class: "form-control", placeholder:"Cm"  %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mb-3" id="form1">
            <%= form.label 'Peso', class: "form-label" %>
            <%= form.text_field :peso, class: "form-control" , placeholder:"Kg"  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
          <%= form.label "Maximal Bench Press", class: "form-label" %>
          <%= form.text_field :max_pres, class: "form-control", placeholder:"Kg"  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label 'Maximal Sentadilla', class: "form-label" %>
            <%= form.text_field :max_squat, class: "form-control" , placeholder:"Kg" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Maximal Peso Muerto", class: "form-label" %>
            <%= form.text_field :max_dl , class: "form-control", placeholder:"Kg" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Salto Máximo Incompleto", class: "form-label" %>
            <%= form.text_field :max_jump_incompleto, class: "form-control", placeholder:"Cm" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Salto Máximo Completo", class: "form-label" %>
            <%= form.text_field :max_jump_completo, class: "form-control", placeholder:"Cm" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Salto Máximo Libre", class: "form-label" %>
            <%= form.text_field :max_jump_libre, class: "form-control", placeholder:"Cm" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Salto Máximo Carrera", class: "form-label" %>
            <%= form.text_field :max_jump_carrera, class: "form-control", placeholder:"Cm" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Salto Máximo Carrera", class: "form-label" %>
            <%= form.text_field :max_v1, class: "form-control", placeholder:"Cm" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Salto Máximo Carrera", class: "form-label" %>
            <%= form.text_field :max_v2, class: "form-control", placeholder:"Cm" %>
          </div>
        </div>
      </div>
      <div class="form-group mt-2 text-center" id="botones"
      >
        <%= form.submit 'Guardar Evaluación', class: 'btn btn-primary' %>
        <%= link_to "Volver", :back, class: ["btn", "btn-secondary"] %>
      </div>
    <% end %>
  </div>
</div>