<div class="row ml-0 mt-3">
    <h2>Shopping cart</h2>
</div>
<div class="row ml-0 mt-2">
    <p>The current order contains the following tickets:</p>
</div>
<div class="row ml-0">
    <p id="notice">
        <%= notice %>
    </p>
    <table class="table">
        <thead>
            <th scope="col">Event</th>
            <th scope="col">Ticket Type</th>
            <th scope="col">Amount</th>
            <th scope="col">Total price</th>
            <th scope="col">Actions</th>
        </thead>
        <tbody>
            <% @info.each do |info| %>
                <tr>
                    <td><%= info[0] %></td>
                    <td><%= info[1] %></td>
                    <td><%= info[2] %></td>
                    <td><%= info[3] %></td>
                    <td>
                        <%= button_to "Remove 1", { controller: "shopping_cart", action: "remove", ticket_type_id: info[4] }, method: :post, class: ["btn", "btn-primary"] %>
                    </td>
                </tr>
            <% end %>
            <td><b><%= "Total Price" %></b></td>
            <td><%= "" %></td>
            <td><%= "" %></td>
            <td><b><%= @total %></b></td>
        </tbody>
    </table>
    <div class="row mt-3">
        <div class="col-sm-5"></div>
            <div class="col-sm-7">
                <div *ngFor="let actionButton of actionButtonData">
                    <div *ngIf="actionButton.Direction === 1" class="btn-group">
                        <%= button_to "Clean the Cart" , { controller: "shopping_cart", action: "zap"}, method: :post, class: ["btn", "btn-primary"] %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <p>
        <%= link_to 'Home', root_path %>
    </p>
</div>