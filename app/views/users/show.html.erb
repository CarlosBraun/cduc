<div class="">
    <h2>
        <%=@user.name + " " + @user.last_name %>
    </h2>
</div>
<div class="row ml-0 mt-3">
  <div class="col">
    <h2><%= image_tag(@user.avatar.attached? ? @user.avatar : "profile.png", width: "400px", data: { bs_toggle: "modal", bs_target: "#viewFlyer" }) %></h2>
  </div>
  <div class="col">
    <ul class="list-unstyled">
      <li><strong>Mail:</strong>
          <%=@user.email %>
      </li>
      <li><strong>Telephone:</strong>
          <%=@user.telephone %>
      </li>
    </ul>
  </div>
</div>


<div class="row ml-0 mt-2 mb-3">
    <div class="col-2">
        <%= link_to "Edit this user", edit_user_path(@user), class: ["btn", "btn-primary"] %>
            &nbsp;
    </div>
    <div class="col-2">
        <%= link_to "Log Out", "logout", class: ["btn", "btn-primary"], onclick: "logout()" %>
    </div>
</div>

<div class="modal" id="viewFlyer" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= @user.name + " " + @user.last_name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= image_tag @user.avatar.attached? ? @user.avatar : "thumbnail.svg", width: "100%" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>