<style>
  #conteiner_3{
    margin-left: 0px;
    margin-right: 0px;
    margin-top: 3%;
    margin-bottom: 2%;
    width : auto;
  }
  #form1{
    width : 100% ;
  }
  #formspace{
    margin-left: 10%;
    margin-right: 10%;
  }
  #datos{
    margin-bottom: 2%;
  }
  select{
    width: 100%;
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    background-color: #fff; 
  }
  #botones{
    margin-top: 2%;
  }

</style>
<div class="row ml-0" id="conteiner_3">
  <div class="col" id=formspace>
    <%= form_with model: entrenador, local: true do |form| %>
      <%= errors_for entrenador %>
      <div class="mb-3" id="form1">
        <%= form.label 'Foto' %>
        <%= form.file_field :avatar, class: "form-control-file" %>
      </div> 
      <div class="row g-3">
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label 'Nombre', class: "form-label" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label 'Apellidos', class: "form-label" %>
            <%= form.text_field :last_name, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
          <%= form.label "Correo *", class: "form-label" %>
          <%= form.text_field :mail, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Teléfono *", class: "form-label" %>
            <%= form.text_field :telephone, class: "form-control", placeholder:"+569..." %>
          </div>
        </div>
        <div class="col-6">
          <div class="mb-3" id="form1">
            <%= form.label "Puesto", class: "form-label" %>
            <%= form.select :rol, ["Entrenador","Preparador Físico", "Kinesiólogo", "Piscólogo", "Ayudante", "Practicante", "Jefe de Entrenadores", "Jefe de Rama", "Presidente de Rama", "Secretario", "Tesorero", "Fotografo"], class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group mt-2 text-center" id="botones">
        <%= form.submit 'Guardar Jugador', class: 'btn btn-primary' %>
        <%= link_to "Volver", :back, class: ["btn", "btn-secondary"] %>
      </div>
    <% end %>
  </div>
</div>