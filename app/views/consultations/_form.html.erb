<style>
  #conteiner_3{
    margin-left: 0px;
    margin-right: 0px;
    margin-top: 3%;
    margin-bottom: 2%;
    width : auto;
  }
  #form1{
    width : 100% ;
  }
  #formspace{
    margin-left: 10%;
    margin-right: 10%;
  }

</style>
<div class="row ml-0" id="conteiner_3">
  <div class="col" id=formspace>
    <%= form_with model: consultation, local: true do |form| %>
      <%= errors_for consultation %> 
      <div class="row g-3">
        <div class="col-md-12">
          <div class="mb-6" id="form1">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title , class: "form-control" %>
          </div>
        </div>
        <div class="col-md-12">
          <div class="mb-3" id="form1">
            <%= form.label 'Descripcion', class: "form-label" %>
            <%= form.text_field :description , class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Comienzo", class: "form-label" %>
            <%= form.datetime_field :start_time , class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3" id="form1">
            <%= form.label "Termino", class: "form-label" %>
            <%= form.datetime_field :end_time , class: "form-control" %>
          </div>
        </div>
        <div class="col-12">
          <div class="mb-3" id="form1">
            <input class="form-check-input" type="checkbox" id="allday">
            <label class="form-check-label" for="allday">
              Todo el dia?
            </label>
          </div>
        </div>
      </div>
      <div class="form-group mt-2">
        <%= form.submit 'Guardar Evento', class: 'btn btn-secondary' %>
        <%= link_to "Volver", :back, class: ["btn", "btn-secondary"] %>
      </div>
    <% end %>
  </div>
</div>