<title> Voley UC | Registro</title>
<style>
  h2.titulo{
    text-align: center ;
  }
  #xd{
    margin-top: 5% ;
    margin-left: 15%;
    margin-right: 15%;
    width: 70%;

    color: black;
  }
  .a:hover {
    color: blue;
    text-decoration: underline;
  }
  .col-4{
    width: 100%;
  }
</style>
<div class="container" id="xd">
<h2 class="titulo">Registrate</h2>
  <div class="row ml-0 mt-3" >
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= errors_for resource %>
      <div class="mb-3 col-4">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
      <div class="mb-3 col-4">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
      </div>
      <div class="mb-3 col-4">
        <%= f.label :telephone %><br />
        <%= f.text_field :telephone, autocomplete: "telephone", class: "form-control" %>
      </div>
      <div class="mb-3 col-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="mb-3 col-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3 col-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group actions">
        <%= f.submit "Sign up", class: [ "btn", "btn-primary"] %>
      </div>
    <% end %>
    </div>
  </div>
</div>
